{
  "name": "vfx-forge-mcp",
  "version": "0.1.0",
  "description": "MCP server for VFX Forge Roblox Studio plugin - uses Bun + WebSocket",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "lint": "bunx eslint src --ext .ts",
    "format": "bunx prettier --write \"src/**/*.ts\"",
    "typecheck": "bunx tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "roblox",
    "vfx",
    "plugin",
    "websocket",
    "bun"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "bun-types": "^1.3.6",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
